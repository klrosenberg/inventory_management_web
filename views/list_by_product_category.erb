  <h2><center>
    <table>
      <tr>
        <td>Product</td>
        <td>Price</td>
        <td>Quantity</td>
      </tr>
      <% @category_list = FloralDepartmentProduct.where("category_id", params["id"].to_i) %>
      <% @category_list.each do |product| %>
        <tr>
          <td><%= product.product%></td>
          <td><%= product.cost%></td>
          <td><%= product.quantity%></td>
        </tr>
      <% end %>
    </table>
    </table>
  </center></h2>
</body>
</html>